<pge:LagoVistaPage
    x:Class="LagoVista.Uas.BaseStation.ControlApp.Views.FlightView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:pge="using:LagoVista.UWP.UI"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LagoVista.Uas.BaseStation.ControlApp.Views"
    xmlns:maps="using:Windows.UI.Xaml.Controls.Maps"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:ctl="using:LagoVista.Uas.BaseStation.ControlApp.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid Visibility="{x:Bind Path=ViewModel.UasMgr.Active, Converter={StaticResource NullVisibilityConverters}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Waiting for UAS" Foreground="White" FontSize="48" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-100,0,0" />
            <ProgressRing HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" Width="50" Height="50" IsActive="True" Margin="0,100,0,0" />
        </Grid>
        <Grid Visibility="{x:Bind Path=ViewModel.UasMgr.Active, Converter={StaticResource NotNullVisibilityConverters}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="480" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="640" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="{x:Bind Path=ViewModel.UasMgr.Active.Uas.TemperatureHigh, Mode=TwoWay, FallbackValue=1}"  Foreground="Wheat"  FontSize="128"  />
            <TextBlock Text="{x:Bind Path=ViewModel.UasMgr.Active.Uas.TemperatureLow, Mode=TwoWay, FallbackValue=2}"  Foreground="Wheat"  FontSize="128" Margin="0,150,0,0" />

            <Grid Background="SteelBlue" Grid.Column="1">
                <Grid Grid.Column="1" >
                    <!--  <ctl:ArtificialHorizon Roll="{Binding Path=UasMgr.Active.Uas.Attitude.Roll, Mode=TwoWay}" Pitch="{Binding Path=UasMgr.Active.Uas.Attitude.Pitch, Mode=TwoWay}"  Width="640" Height="480" />
               -->
                    <ctl:FPVView  />
                    <ctl:H264FPVView x:Name="DJIVIdeo" Uas="{x:Bind Path=ViewModel.UasMgr.Active.Uas, Mode=OneWay}"  />
                    <ctl:SystemStatus Foreground="Lime" FontSize="20" VerticalAlignment="Bottom"                                     
                            Armed="{x:Bind Path=ViewModel.UasMgr.Active.Uas.SystemStatus.Armed, Mode=TwoWay}" 
                            FlightTime="{Binding Path=ViewModel.UasMgr.Active.Uas.SystemStatus.FlightTime, Mode=TwoWay}"
                            LowBattWarning="{x:Bind Path=ViewModel.UasMgr.Active.Uas.SystemStatus.LowBatteryWarning, Mode=TwoWay}" 
                            CriticalBattWarning="{x:Bind Path=ViewModel.UasMgr.Active.Uas.SystemStatus.CriticalBatteryWarning, Mode=TwoWay}"                                       
                            BatteryVoltage="{x:Bind Path=ViewModel.UasMgr.Active.Uas.Battery.Voltage, Mode=TwoWay}"                                                                   
                            PercentRemaining="{x:Bind Path=ViewModel.UasMgr.Active.Uas.Battery.RemainingPercent, Mode=TwoWay}"                             
                            TimeRemaining="{x:Bind Path=ViewModel.UasMgr.Active.Uas.Battery.TimeRemaining, Mode=TwoWay}" />
                    <ctl:AoACircle Roll="{x:Bind Path=ViewModel.UasMgr.Active.Uas.Attitude.Roll, Mode=TwoWay}" Pitch="{x:Bind Path=ViewModel.UasMgr.Active.Uas.Attitude.Pitch, Mode=TwoWay}"  Width="640" Height="480" HorizontalAlignment="Center" Foreground="Lime" />
                    <ctl:AltitudeIndicator Altitude="{x:Bind Path=ViewModel.UasMgr.Active.Uas.RangeFinder.Distance, Mode=TwoWay}" Foreground="Lime" />
                    <ctl:Compass Foreground="Lime" VerticalAlignment="Top" Heading="{x:Bind Path=ViewModel.UasMgr.Active.Uas.Attitude.Yaw, Mode=TwoWay}" Margin="0,20,0,0" />
                    <ctl:GPSStatus  SatCount="{x:Bind Path=ViewModel.UasMgr.Active.Uas.GPS.SateliteCount}" VerticalAlignment="Center" Foreground="Lime"  />
                </Grid>
            </Grid>
            <!-- flight state 6 pack -->
            <Grid Grid.Row="2" Grid.Column="1" x:Name="StateGrid" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="160"/>
                    <RowDefinition Height="160" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="160"/>
                </Grid.ColumnDefinitions>
                <Grid.Resources  >
                    <Style TargetType="controls:RadialGauge" x:Key="FlightGuage">
                        <Setter Property="TickLength" Value="15"/>
                        <Setter Property="TickWidth" Value="3"/>
                        <Setter Property="Width" Value="100" />
                        <Setter Property="Height" Value="100" />
                        <Setter Property="TickBrush" Value="White"/>
                        <Setter Property="ScalePadding" Value="0"/>
                        <Setter Property="ScaleWidth" Value="1"/>
                        <Setter Property="ScaleTickWidth" Value="0" />
                        <Setter Property="ScaleBrush" Value="White"/>
                        <Setter Property="ScaleTickBrush" Value="White"/>
                        <Setter Property="FontSize" Value="64" />
                        <Setter Property="NeedleBrush" Value="Red"/>
                        <Setter Property="NeedleWidth" Value="4"/>
                        <Setter Property="StepSize" Value="0"/>
                        <Setter Property="TrailBrush" Value="White" />
                    </Style>

                    <Style TargetType="TextBlock" x:Key="GuageTitle">
                        <Setter Property="VerticalAlignment" Value="Top" />
                        <Setter Property="Margin" Value="0,20,0,0" />
                        <Setter Property="HorizontalAlignment" Value="Center" />
                        <Setter Property="Foreground" Value="White" />
                        <Setter Property="FontSize" Value="12" />
                    </Style>

                    <Style TargetType="controls:RadialGauge" x:Key="Horizontal180" BasedOn="{StaticResource FlightGuage}">
                        <Setter Property="MinAngle" Value="270"/>
                        <Setter Property="MaxAngle" Value="90"/>
                        <Setter Property="Margin" Value="0,30,0,0" />
                        <Setter Property="Minimum" Value="-1000"/>
                        <Setter Property="Maximum" Value="1000"/>
                        <Setter Property="TickSpacing" Value="200"/>
                    </Style>
                    <Style TargetType="controls:RadialGauge" x:Key="Vertical180" BasedOn="{StaticResource FlightGuage}">
                        <Setter Property="MinAngle" Value="0"/>
                        <Setter Property="MaxAngle" Value="180"/>
                        <Setter Property="Margin" Value="0,0,0,20" />
                        <Setter Property="Minimum" Value="-1000"/>
                        <Setter Property="Maximum" Value="1000"/>
                        <Setter Property="TickSpacing" Value="200"/>
                    </Style>

                    <Style TargetType="Rectangle" x:Key="GaugeBackground" >
                        <Setter Property="Margin" Value="5" />
                        <Setter Property="Width" Value="140" />
                        <Setter Property="Height" Value="140" />
                        <Setter Property="Fill" Value="Black" />
                        <Setter Property="Stroke" Value="Silver" />
                        <Setter Property="StrokeThickness" Value="3" />
                    </Style>

                    <Style TargetType="TextBlock" x:Key="GaugeValue">
                        <Setter Property="HorizontalAlignment" Value="Center" />
                        <Setter Property="Foreground" Value="White" />
                        <Setter Property="FontSize" Value="12" />
                        <Setter Property="VerticalAlignment" Value="Bottom" />
                        <Setter Property="Margin" Value="0,0,0,30" />
                    </Style>

                </Grid.Resources>

                <Rectangle Grid.RowSpan="3" Grid.ColumnSpan="4" Fill="DarkOliveGreen" />

                <ctl:VideoControl Grid.Row="0" Grid.Column="2" />

                <StackPanel Grid.Row="0" Grid.Column="0">
                    <Button  Content="CameraOn" Command="{Binding ElementName=DJIVIdeo, Path=StartVideoCommand}"/>
                    <Button  Content="CameraOff" Command="{Binding ElementName=DJIVIdeo, Path=StopVideoCommand}" />
                </StackPanel>

                <Grid Width="160" Height="160" Margin="0" Grid.Row="1" Grid.Column="0" >
                    <Rectangle Style="{StaticResource GaugeBackground}" />
                    <TextBlock Text="Stick - Rudder" Style="{StaticResource GuageTitle}" />
                    <controls:RadialGauge Value="{x:Bind ViewModel.FlightStickState.Rudder, Mode=OneWay}" VerticalAlignment="Bottom" ValueStringFormat="'{0}def'" Style="{StaticResource Horizontal180}" />
                    <TextBlock Text="{x:Bind Path=ViewModel.FlightStickState.Rudder, Mode=OneWay, FallbackValue=30}" Style="{StaticResource GaugeValue}" />
                </Grid>

                <Grid Grid.Row="1" Grid.Column="1" >
                    <Rectangle Style="{StaticResource GaugeBackground}" />
                    <TextBlock Text="Stick - Roll" Style="{StaticResource GuageTitle}" />
                    <controls:RadialGauge Value="{x:Bind Path=ViewModel.FlightStickState.Roll, Mode=TwoWay}" VerticalAlignment="Bottom" ValueStringFormat="'{0}def'" Style="{StaticResource Horizontal180}" />
                    <TextBlock Text="{x:Bind Path=ViewModel.FlightStickState.Roll, FallbackValue=30, Mode=OneWay}" Style="{StaticResource GaugeValue}" />
                </Grid>

                <Grid Grid.Row="1" Grid.Column="2" >
                    <Rectangle Style="{StaticResource GaugeBackground}" />
                    <TextBlock Text="Stick - Throttle" Style="{StaticResource GuageTitle}" />

                    <controls:RadialGauge Value="{x:Bind Path=ViewModel.FlightStickState.Throttle, Mode=TwoWay}" VerticalAlignment="Bottom" ValueStringFormat="'{0}def'" Style="{StaticResource Vertical180}" />
                    <TextBlock Text="{x:Bind Path=ViewModel.FlightStickState.Throttle, FallbackValue=30, Mode=OneWay}" Style="{StaticResource GaugeValue}" />
                    <TextBlock Text="Hold" Style="{StaticResource GaugeValue}" Margin="0,0,60,50"  />
                    <TextBlock Text="{x:Bind Path=ViewModel.FlightStickState.AltitudeHold, FallbackValue=false, Mode=OneWay}" Margin="0,0,60,30" Style="{StaticResource GaugeValue}" />
                </Grid>

                <Grid Grid.Row="1" Grid.Column="3" >
                    <Rectangle Style="{StaticResource GaugeBackground}" />
                    <TextBlock Text="Stick - Pitch" Style="{StaticResource GuageTitle}" />
                    <controls:RadialGauge Value="{x:Bind Path=ViewModel.FlightStickState.Pitch, Mode=TwoWay}" VerticalAlignment="Bottom" ValueStringFormat="'{0}def'" Style="{StaticResource Vertical180}" />
                    <TextBlock Text="{x:Bind Path=ViewModel.FlightStickState.Pitch, FallbackValue=30, Mode=OneWay}" Style="{StaticResource GaugeValue}" />
                </Grid>
            </Grid>

            <Grid Grid.Row="2" Grid.Column="0" Background="Black">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel>
                    <TextBlock Text="{x:Bind ViewModel.UasMgr.Active.Uas.UasName}" Foreground="LimeGreen" FontFamily="Consolas" />
                    <TextBlock Text="{x:Bind ViewModel.UasMgr.Active.Uas.UasType}" Foreground="LimeGreen" FontFamily="Consolas" />
                    <TextBlock Text="{x:Bind ViewModel.UasMgr.Active.Uas.UasSerialNumber}" Foreground="LimeGreen" FontFamily="Consolas" />
                </StackPanel>
                <ListBox ItemsSource="{x:Bind Path=ViewModel.FlightRecorder}" Grid.Row="1" Background="Black" >
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding TimeStamp}" Foreground="Green" FontFamily="Consolas"/>
                                <TextBlock Text="{Binding EventName}" HorizontalAlignment="Right" Foreground="Green" FontFamily="Consolas"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>

            <maps:MapControl Visibility="{x:Bind Path=ViewModel.UasMgr.Active.Uas.HasLocation, Converter={StaticResource VisibilityConverters}}"
                Grid.Row="1" Grid.Column="2" ZoomLevel="22" Style="Aerial"
                Center="{x:Bind Path=ViewModel.UasMgr.Active.Uas.Location, Converter={StaticResource GeoLocationConverter}, Mode=TwoWay}"
                MapServiceToken="s5miuLzzn4RuPyMXzOYF~pA3KRBwzLZ4JOHnyIaUAWA~AnoR9G-Mf6OR7_n8b6wVy_cd9wim48xfSp39TC31OlvLad6zT5Pf0XN35EPuEV5U"  />

            <TextBlock Text="No GPS Lock" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Center"  VerticalAlignment="Center"
                     Visibility="{x:Bind Path=ViewModel.UasMgr.Active.Uas.HasLocation, Converter={StaticResource InvertsVisibilityConverters}}" />
        </Grid>
    </Grid>
</pge:LagoVistaPage>
